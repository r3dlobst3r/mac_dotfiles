# Override in /opt/homebrew/etc/gitconfig for local system settings

[user]
  name = Manish Kumar â›„
  email = manishprivet@protonmail.com
  signingkey = /Users/manishprivet/.ssh/id_ed25519.pub

[core]
  autocrlf = input
  compression = 9
  fsync = none
  whitespace = error
  preloadindex = true
  excludesfile = /Users/manishprivet/.config/git/ignore
  pager = diff-so-fancy | less --tabs=4 -RFX

[pager]
  branch = false
  tag = false

[interactive]
	diffFilter = diff-so-fancy --patch
  singlekey = true

[advice]
  addEmptyPathspec = false
  pushNonFastForward = false
  statusHints = false

[blame]
  coloring = highlightRecent
  date = relative

[color "blame"]
  highlightRecent = white bold,1 year ago,white,1 month ago,default,7 days ago,blue

[status]
  branch = true
  short = true
  showStash = true
  showUntrackedFiles = all

[diff-so-fancy]
  markEmptyLines = false

[color "diff"]
  meta = white bold
  frag = magenta
  context = white
  whitespace = yellow reverse
  old = red

[commit]
  template = /Users/manishprivet/.config/git/template
  gpgsign = true

[gpg]
  format = ssh

[push]
  autoSetupRemote = true
  default = current
  followTags = true

[pull]
  default = current
  rebase = true

[rebase]
  autoStash = true
  missingCommitsCheck = warn

[init]
  defaultBranch = main

[log]
  abbrevCommit = true
  graphColors = blue,yellow,cyan,magenta,green,red

[color "decorate"]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta

[branch]
  sort = -committerdate

[tag]
  sort = -taggerdate

[color "branch"]
  current = magenta
  local = default
  remote = yellow
  upstream = green
  plain = blue

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[diff]
  context = 3
  renames = copies
  interHunkContext = 10
  colorMoved = default

[url "git@github.com:manishprivet:"]
  insteadOf = "me:"

[url "git@github.com:"]
  insteadOf = "gh:"
	insteadOf = https://github.com/
